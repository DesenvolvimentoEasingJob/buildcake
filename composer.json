{
    "name": "buildcake/app",
    "description": "BuildCake Application Skeleton",
    "type": "project",
    "license": "MIT",
    "authors": [
        {"name": "BuildCake", "email": "felipe@buildcake.com.br"}
    ],
    "autoload": {
        "psr-4": {"Buildcake\\Core\\": "src/"}
    },
    "require": {
        "sentry/sentry": "^4.10",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.11",
        "buildcake/tools": "^2.0",
        "buildcake/sqlkit": "^1.0",
        "buildcake/framework": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ],
        "post-create-project-cmd": [
            "@php -r \"if (is_dir('.git')) { $i=new \\RecursiveDirectoryIterator('.git', \\RecursiveDirectoryIterator::SKIP_DOTS); $r=new \\RecursiveIteratorIterator($i, \\RecursiveIteratorIterator::CHILD_FIRST); foreach($r as $f) { $f->isDir() ? rmdir($f->getPathname()) : unlink($f->getPathname()); } rmdir('.git'); }\""
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
