# Usado só se o document root for back/ (ex.: hospedagem). O ideal é root = public/.
# Protege a raiz: bloqueia acesso direto a pastas sensíveis (403).
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Bloquear acesso direto a vendor, src, .env e arquivos sensíveis
    RewriteRule ^(vendor|src|config|\.env|\.git|composer\.(json|lock))(/|$) - [F,L]
</IfModule>

<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# CORS Headers
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "*"
Header always set Access-Control-Max-Age "1000"
Header always set Access-Control-Allow-Headers "*"

# Permitir requisições OPTIONS (CORS preflight)
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Preservar cabeçalhos de autorização
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# Ignorar arquivos e diretórios reais
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirecionar tudo para public/index.php (front controller)
RewriteRule ^(.*)$ public/index.php [QSA,L]

